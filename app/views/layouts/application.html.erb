<!DOCTYPE html>
<html>
<head>
    <title>SeedSphere</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>

    <style>
      /* Add your custom CSS styles here */
      body {
        background-color: #e8f5e9; /* A light green background */
      }
      
      header {
        background-color: #4caf50; /* A darker green for the header */
        padding: 10px;
      }

      .navbar-brand,
      .nav-link {
        color: #fff !important; /* White text for better contrast against the green background */
      }

      .navbar-toggler-icon {
        filter: invert(1); /* Invert the color of the navbar toggler icon to make it visible against the green background */
      }
      .btn {
        background-color: #68a357;
        color: #ffffff;
        padding: 5px 12px;
        font-size: 18px;
        margin: 8px 0;
      }
    </style>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg">
        <%= link_to 'SeedSphere', root_path, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"><i class="fas fa-bars"></i></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to '<i class="fas fa-home"></i> Home'.html_safe, root_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-seedling"></i> Seeds'.html_safe, seeds_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to '<i class="fas fa-list"></i> Categories'.html_safe, categories_path, class: 'nav-link' %>
            </li>
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to '<i class="fas fa-plus"></i> Add Seed'.html_safe, new_seed_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to '<i class="fas fa-sign-out-alt"></i> Sign Out'.html_safe, destroy_user_session_path, method: :delete, class: 'nav-link' %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to '<i class="fas fa-sign-in-alt"></i> Sign In'.html_safe, new_user_session_path, class: 'nav-link' %>
              </li>
              <li class="nav-item">
                <%= link_to '<i class="fas fa-user-plus"></i> Sign Up'.html_safe, new_user_registration_path, class: 'nav-link' %>
              </li>
            <% end %>
          </ul>
          
          <form class="form-inline my-2 my-lg-0 ml-auto" action="/seeds" method="get">
            <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search Seeds" aria-label="Search">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
          </form>
        </div>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
