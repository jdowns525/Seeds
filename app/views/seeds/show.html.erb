<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <div class="card">
        <div class="card-body">
          <p id="notice" class="alert alert-info"><%= notice %></p>

          <p class="mb-2">
            <strong>Name:</strong>
            <%= @seed.name %>
          </p>

          <p class="mb-2">
            <strong>Category:</strong>
            <%= @seed.category.name %>
          </p>

          <p class="mb-2">
            <strong>Description:</strong>
            <%= @seed.description %>
          </p>

          <p class="mb-2">
            <strong>Image URL:</strong>
            <%= @seed.image_url %>
          </p>

          <div class="d-flex justify-content-between">
            <%= link_to 'Edit', edit_seed_path(@seed), class: 'btn btn-primary' %>
            <%= link_to 'Back', seeds_path, class: 'btn btn-secondary' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
